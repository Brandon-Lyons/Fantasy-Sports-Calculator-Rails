<h2><%= @player.first_name + " " + @player.last_name %></h2>
<div class="row-fluid" id="profile">
  <img id="profile-img" src="<%= @profile['PhotoUrl'] %>" />
  <div id="player-info" class="span4">
    <%= render "player-info" %>
  </div>
  <div class="span4">
    <%= render "profile-stats" %>
  </div>
</div>
<div id="stats"></div>

<%= form_tag("/users/#{@user.id}/football_players", :method => "post") do %>
  <%= text_field_tag("stats[year]", nil, :placeholder => "Year") %>
  <%= text_field_tag("stats[week]", nil, :placeholder => "Week") %>
  <%= hidden_field_tag("stats[player_id]", "#{@player.player_id}") %>
  <%= submit_tag "Calculate" %>
<% end %>
<%= link_to "Back to Player List", user_calculate_index_path(@user), :class => "btn" %>
